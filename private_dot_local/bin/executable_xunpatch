#!/bin/sh
# xunpatch [-n] [-pN] FILES...

cleanup() {
    rm -f "$TMPFILE"
}

if ! command -v unpatch >/dev/null; then
    echo "$0: missing unpatch" >&2
    exit 1
fi

# masterdir-*/builddir/$wrksrc/ by default
STRIP=3
NOEDIT=

while getopts np: opt; do
    case "$opt" in
        n) NOEDIT=y ;;
        p) STRIP="$OPTARG" ;;
        ?) echo "usage: $0 [-n] [-pN] FILES..."; exit ;;
    esac
done
shift $(( OPTIND - 1 ))

if [ "$#" -lt 1 ]; then
    echo "usage: $0 [-n] [-pN] FILES..." >&2
    exit 1
fi

for f; do
    [ -e "$f.orig" ] || cp "$f" "$f.orig"
    $EDITOR "$f" >/dev/tty
done

TMPFILE="$(mktemp -t "$0.XXXXXX.patch")"

trap cleanup EXIT TERM INT

unpatch -g -p "$STRIP" "$@" > "$TMPFILE"

if [ -z "$NOEDIT" ]; then
    $EDITOR "$TMPFILE" >/dev/tty
fi

cat "$TMPFILE"
