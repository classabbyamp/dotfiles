[bar/ob]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 30
bottom = true
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.primary}

padding-left = 55
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-1 = Input Mono:pixelsize=12;2
font-0 = FontAwesome:pixelsize=12;2
font-2 = DejaVu Sans:pixelsize=12;2

modules-left = pkg git-status backlight
modules-center = bspwm2
modules-right = battery root home date

