[colors]
background = #000000
background-alt = #000000
foreground = #cbe3e7
foreground-alt = #cbe3e7
primary = #906cff
secondary = #cbe3e7
green = #62d196
alert = #ff5458

[bar/base]
width = 100%
fixed-center = true
wm-restack = bspwm
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2
line-color = #eff1f5
padding-left = 2
padding-right = 2
font-0 = FontAwesome:size=12;2
font-1 = Input Mono:size=11;2
font-2 = codicon:size=12;2
font-3 = Noto Color Emoji:scale=10
font-4 = DejaVu Sans:size=11;2

[bar/wintitles]
inherit = bar/base
monitor = ${env:MONITOR}
height = 25
top = true
modules-center = winlist

[bar/base-bottom]
inherit = bar/base
height = 25
module-margin-left = 1
module-margin-right = 2
bottom = true
scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[bar/dp1]
inherit = bar/base-bottom
monitor = ${env:MONITOR:DisplayPort-1}
modules-left = eth pkg xbps
modules-center = bspwm
modules-right = date localtime utctime

[bar/dp2]
inherit = bar/base-bottom
monitor = ${env:MONITOR:DisplayPort-2}
modules-left =
modules-center = bspwm
modules-right = date localtime utctime
tray-position = left
tray-padding = 2
tray-detached = true

[bar/dp0]
inherit = bar/base-bottom
monitor = ${env:MONITOR:DisplayPort-0}
modules-left = cpu memory volume wttr wttr2
modules-center = bspwm
modules-right = root home date localtime utctime

[module/winlist]
type = custom/script
exec = ${env:P_BSPWM_WINDOW_CMD}
interval = 0.25
format = <label>

[module/home]
type = internal/fs
interval = 25
mount-0 = /home
label-mounted =   %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/root]
type = internal/fs
interval = 25
mount-0 = /
label-mounted =   %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

[module/bspwm]
type = internal/bspwm
index-sort = true
wrapping-scroll = false
ws-icon-0 = 1;1
ws-icon-1 = 2;2
ws-icon-2 = 3;3
ws-icon-3 = 4;4
ws-icon-4 = 5;5
ws-icon-5 = 6;6
ws-icon-6 = 7;7
ws-icon-7 = 8;8
ws-icon-8 = 9;9
ws-icon-9 = 10;10
ws-icon-10 = 11;11
ws-icon-11 = 12;12
ws-icon-12 = 13;13
ws-icon-13 = 14;14
ws-icon-14 = 15;15
ws-icon-default = 
format = <label-state>
label-mode-padding = 2
label-mode-foreground = ${colors.background}
label-mode-background = ${colors.primary}
; focused = Active workspace on focused monitor
label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-overline = ${colors.primary}
label-focused-padding = 2
; unfocused = Inactive workspace on any monitor
label-unfocused = %icon%
label-unfocused-padding = ${self.label-focused-padding}
; occupied
label-occupied = %icon%
label-occupied-padding = ${self.label-focused-padding}
; empty
label-empty = %icon%
label-empty-padding = ${self.label-focused-padding}
; visible = Active workspace on unfocused monitor
label-visible = %icon%
label-visible-background = ${colors.background}
label-visible-overline = ${self.label-focused-overline}
label-visible-padding = ${self.label-focused-padding}
; urgent = Workspace with urgency hint set
label-urgent = %icon%
label-urgent-padding = ${self.label-focused-padding}
label-urgent-overline = ${colors.alert}

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp6s0
interval = 3.0
format-connected-prefix = "  "
label-connected = %local_ip%
format-connected = <label-connected>
format-disconnected-prefix = ${self.format-connected-prefix}
label-disconnected = DOWN
format-disconnected = <label-disconnected>
format-disconnected-overline = ${colors.alert}

[module/date]
type = internal/date
interval = 5
date = "%a  %Y-%m-%d"
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
label = %date%

[module/localtime]
type = internal/date
interval = 5
time = %H:%M
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}
label = %time%

[module/utctime]
type = custom/script
exec = TZ=Etc/UTC date +"%H:%Mz"
interval = 5
format-prefix = "  "
format-prefix-foreground = ${colors.foreground-alt}

[module/volume]
type = internal/pulseaudio
use-ui-max = false
interval = 5
format-volume = <ramp-volume> <label-volume>
label-volume = %percentage%%
label-muted = 
label-volume-foreground = ${colors.foreground}
format-volume-foreground = ${colors.foreground}
label-muted-foreground = ${colors.foreground}
format-muted-foreground = ${colors.foreground}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
click-middle = switch-audio-sink &
click-right = pavucontrol &

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60
format-prefix = "  "
format-prefix-foreground = ${colors.foreground}
format = <label>
format-warn-prefix = ${self.format-prefix}
format-warn = <label-warn>
format-warn-overline = ${colors.alert}
label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.foreground}

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

[module/pkg]
type = custom/script
interval = 7200
format-prefix = " "
exec = xi -uMn 2> /dev/null | wc -l
click-middle = kitty -e xi -u &

[module/xbps]
type = custom/script
interval = 7200
format-prefix = " "
exec = curl -f https://repo-fi.voidlinux.org/void-updates/void-updates/updates_void@placeviolette.net.txt 2> /dev/null | cut -d' ' -f 1 | uniq | wc -l
click-middle = xdg-open https://repo-fi.voidlinux.org/void-updates/void-updates/updates_void@placeviolette.net.txt &

[module/wttr]
type = custom/script
exec = echo M: `curl -fs 'wttr.in/YUL?m&format=1' | sed 's/Unknown.\+/?/'`
click-left = xdg-open https://openweathermap.org/city/6077243 &
interval = 600

[module/wttr2]
type = custom/script
exec = echo S: `curl -fs 'wttr.in/YSC?m&format=1' | sed 's/Unknown.\+/?/'`
click-left = xdg-open https://openweathermap.org/city/6146143 &
interval = 600

