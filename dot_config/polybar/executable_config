[module/wttr]
type = custom/script
exec = echo M: `curl -s 'wttr.in/YUL?m&format=1'`
click-left = xdg-open https://openweathermap.org/city/6077243 &
interval = 600

[module/wttr2]
type = custom/script
exec = echo S: `curl -s 'wttr.in/YSC?m&format=1'`
click-left = xdg-open https://openweathermap.org/city/6146143 &
interval = 600

