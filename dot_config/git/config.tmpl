[user]
	name = {{ (rbw "git").data.username }}
	email = {{ (rbwFields "git").email.value }}
	signingkey = {{ (rbwFields "git").key.value }}

[commit]
	gpgsign = true
	verbose = true

[pull]
	rebase = true

[rebase]
	autoSquash = true
	autoStash = true

[init]
	defaultBranch = master

[pager]
	diff = riff
	show = riff

[interactive]
	diffFilter = riff

[push]
	autoSetupRemote = true

[alias]
	wt = worktree

[includeIf "gitdir:~/void/"]
	path = ~/.config/git/voidconfig
