[user]
	name = {{ (rbw "git").data.username }}
	email = {{ (rbwFields "git").email.value }}
	signingkey = {{ (rbwFields "git").key.value }}

[commit]
	gpgsign = true
	verbose = true

[pull]
	rebase = true

[rebase]
	autoSquash = true
	autoStash = true

[merge]
	conflictStyle = "diff3"

[merge "mergiraf"]
	name = mergiraf
	driver = mergiraf merge --git %O %A %B -s %S -x %X -y %Y -p %P -l %L

[core]
	attributesfile = ~/.config/git/gitattributes

[init]
	defaultBranch = master

[pager]
	diff = riff
	show = riff

[interactive]
	diffFilter = riff --color=on

[push]
	autoSetupRemote = true
	gpgSign = if-asked

[alias]
	wt = worktree
	backport = cherry-pick -x
	track = add --intent-to-add

[tag]
	gpgSign = true

[includeIf "gitdir:~/void/"]
	path = ~/.config/git/voidconfig

{{ (rbw "git").notes }}
